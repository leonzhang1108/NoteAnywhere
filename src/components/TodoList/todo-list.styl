@keyframes opacity-change
  from {opacity: 0}
  to {opacity: .8}
@keyframes anti-opacity-change
  from {opacity: .8}
  to {opacity: 0}
@keyframes invisible-height
  from {height: 3rem}
  to {height: 0}
.weui-cell_vcode
  border-bottom 1px solid #e5e5e5
.weui-cell_vcode.invalid 
  border 1px solid red
.weui-cell:before
  left 0!important
.todo-form
  user-select none
  font-size 18px
  width 100%
  min-height 500px
  overflow hidden
  // color #fff
  .todo-menu-item
    position relative
    width 100%
    height 3rem
    transition transform .5s ease, color .5s ease, background .5s ease, margin .5s ease
    line-height 3rem
    border-top: 1px solid rgba(255,255,255,0.07);
    border-bottom: 1px solid rgba(0,0,0,0.1);
    margin-bottom -2px
    .item-content
      font-weight bold
      white-space nowrap
      padding 0 20px
      .content-show 
        display block
        overflow hidden
        text-overflow: ellipsis
      .content-input
        border none
        background inherit
        margin-top 5px
        width 100%
        font-size 18px
        font-weight bold
        &:focus
          border 0
          outline none
    .item-side
      top 0
      width 80px
      text-align center
      z-index -1
      opacity 0
      position absolute
      font-weight bold
      .side-img
        width 25px
        margin 10px 0
    .item-delete
      right 0
      color red
    .item-check
      left 0
      color green
  .todo-menu-item.done
    background #ccc
    text-decoration line-through
    opacity .8
    color #666
  .todo-menu-item.clicked
    transition background .5s ease
    background #eee
  .todo-menu-item.removing
    height 0
    transition height .4s ease .4s, transform .4s ease, background .4s ease
  .todo-menu-item.editable
    z-index 100
    .item-content
      background #fff
      white-space nowrap
  .todo-menu-item.invisible
    animation invisible-height .5s
    visibility hidden
    height 0
  .todo-menu-item.sorting
    transition all .4s ease
    transform scale(1.05)!important
    background #fff
    z-index 100
    box-shadow 0 2px 16px rgba(0,0,0,.25)
.mask
  height 100%
  position absolute
  width 100%
  z-index 100
  top 0
  background #eee
.mask.in-edit
  animation opacity-change .5s
  opacity .8

